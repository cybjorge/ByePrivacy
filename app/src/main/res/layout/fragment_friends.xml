<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.example.byeprivacy.ui.viewmodels.FriendsViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.FriendsFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="5dp">

            <EditText
                android:id="@+id/add_friend_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Your friend name">

            </EditText>

            <Button
                android:id="@+id/add_friend_button"
                android:text="Add Friend!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical|end">

            </Button>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="63dp"
            android:text="Following"
            app:layout_constraintBottom_toTopOf="@+id/swiperefresh_followers"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/following_counter">

        </TextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="89dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="65dp"
            android:text="Followers"
            app:layout_constraintBottom_toTopOf="@+id/swiperefresh_followers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/follwers_counter">

        </TextView>

        <TextView
            android:id="@+id/following_counter"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="1000"
            android:textSize="15dp"
            android:layout_marginStart="93dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/swiperefresh_followers"
            app:layout_constraintEnd_toStartOf="@+id/follwers_counter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

        </TextView>

        <TextView
            android:id="@+id/follwers_counter"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="1000"
            android:textSize="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="93dp"
            android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toTopOf="@+id/swiperefresh_followers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/following_counter"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

        </TextView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh_followers"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginTop="42dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/following_counter">



            <com.example.byeprivacy.ui.widgets.friends.RecyclerViewFollowers
                android:id="@+id/recycler_followrs"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:visibility="visible"
                app:followerItems="@{model.friendListFollowers}"
                />



            <com.example.byeprivacy.ui.widgets.friends.RecyclerViewFollowing
                android:id="@+id/recycler_following"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                app:followingItems="@{model.friendListFollowing}" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <View
            showTextToast="@{model.message}"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
